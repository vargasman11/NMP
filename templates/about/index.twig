{% extends '_wrapper.twig' %}
{% block main %}

    <div class="container-fluid p-0" id="about-header">
        <div class="header-title-div">
            <div class="shadow" data-aos="fade-right">
                <div><h1>{{ entry.aboutTitle }}</h1></div>
            </div>
        </div>
    </div>
    <div class="container-fluid pt-5" id="about-content">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center lead">
                    {{ entry.aboutContent }}
                    <hr style="border-bottom:solid 3px #cf0015; width: 20%; margin: 0 auto; opacity: 1;">
                    <br>
                    <br>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid" id="about">
        {%- include('about/profiles') %}
        {%- include('about/sustainability') %}

    </div>

{% endblock %}